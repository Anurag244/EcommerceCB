<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/css/app.css" rel="stylesheet">
</head>
<body>
    <%-include('./flash')%>
    <%-include('./header.ejs')%>
    <%-include('./navbar')%>
  
    <h1>hello from product</h1>
    <h1><%=foundProduct.name%></h1>
    <h3><img src="<%=foundProduct.img%>"></h3>
    <h3><%=foundProduct.price%></h3>
    <p><%=foundProduct.desc%></p>

    <div>
        <form
        class="d-inline-block"
        action="/user/<%=foundProduct._id%>/add"
        method="POST"
      >
        <button class="btn btn-info btn-sm">Add to Cart</button>
      </form>
        <h1>Rating Form</h1>
        <form action="/product/<%=foundProduct._id%>/rating " method="POST">
            <label for="star">Rating</label>
            <!-- <input type="range" min="0" max="5" name="rating" id="star"> -->
            <fieldset class="starability-basic">
            
                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="rating" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="rating" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="rating" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="rating" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="rating" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            <br>
            <label for="text">Text</label>
            <textarea name="comment" id="text" rows="3"></textarea>
            <button>Add review</button>
        </form>
    </div>
    <div>
        <% for(let review of foundProduct.reviews){ %>
         <!-- <h2>review<%=review.rating%></h2> -->
         <p class="starability-result" data-rating="<%=review.rating%>">
            Rated: <%=review.rating%> stars
          </p>
         <h5>Comment<%= review.reviews%></h5>
         <!-- <h3>Time <%=review.createdAt%></h3> -->
         <% if(review.createdAt){ %>
             <h5>Time: <%=review.createdAt.toDateString()%></h5>
         <%}%>
       <% } %>
    </div>

    
</body>
</html>